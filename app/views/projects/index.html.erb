<h1>Проекты</h1>

<hr/>

<p>
  <%= link_to("Создать проект", new_project_path) %> | 
  <%= link_to("Пользователи", users_path) %>
</p>

<hr/>

<% if @projects.any? %>
  <% @projects.reverse_each do |project| %>
    <div>
      <h4><%= project.name %></h4>
      <p><i>Автор: <%= project.user.name %></i></p>
      <p><%= project.description %></p>
    </div>
    <br/>
  <% end %>
<% else %>
  <p>У вас пока нет проектов.</p>
<% end %>