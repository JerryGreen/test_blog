<h1><%= link_to("Пользователи", admin_users_path) %> &raquo; Изменить</h1>

<hr/>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited
      this user from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:admin, @user] do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <% if can? :manage, @user %>  
    <p>
      <%= f.label :role, "Тип пользователя" %><br/>
      <%= f.select :role, options_for_select(User::ROLES.map{|r| [r, r]}, selected: @user.role) %>
    </p>
  <% end %>


  <p>
    <%= f.submit %>
  </p>
 
<% end %>