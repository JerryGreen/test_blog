<h1>Создание нового пользователя</h1>

<p>
  <%= link_to("Перейти к списку пользователей", users_path) %>
</p>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </p>
 
  <p>
    <%= f.label :role_id %><br/>
    <%= f.select :role_id, options_for_select(Role.all.map{|r| [r.name, r.id]}) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>