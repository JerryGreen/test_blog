<h1>Изменение данных пользователя</h1>

<p>
  <%= link_to("Перейти к полному списку пользователей", users_path) %>
</p>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited
      this user from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :role_id %><br/>
    <%= f.select :role_id, options_for_select(Role.all.map{|r| [r.name, r.id]}, selected: @user.role.id) %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>